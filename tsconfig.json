{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "app/*": ["./packages/app/*"],
      "@my/ui/*": ["./packages/ui/*"]
    },
    "typeRoots": ["./typings"]
  },
  "include": ["**/*.ts", "**/*.tsx", "../config/src/tamagui.config.ts", "**/*.d.ts"],
  "extends": "tsconfig.base",
  "exclude": ["**/node_modules", "**/dist", "**/types", "apps/next/out", "apps/next/.next", "apps/next/.tamagui"]
}
